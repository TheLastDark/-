@import "../../stars/stars-template.wxss";
.contianer{
    display: flex;
    flex-direction: column;
}
.img-box{
  overflow: hidden;
  width: 100%;
  height: 320rpx;
}
.head-img{
    width: 100%;
    height: 100%;
    -webkit-filter:blur(20px);
}
.head-img-hover{
    width: 100%;
    height: 320rpx;
    position: absolute;
    top:0;
    left: 0;
    display: flex;
    flex-direction: column;
}
.main-title{
  font-size: 19px;
  color:#fff;
  font-weight: bold;
  margin-top: 50rpx;
  margin-left: 40rpx;
  letter-spacing: 2px;
}
.sub-title{
  font-size: 28rpx;
  color: #fff;
  margin-left: 40rpx;
  margin-top: 30rpx;
}
.like{
  display: flex;
  flex-direction: row;
  margin-top: 90rpx;
  margin-left: 40rpx;
}
.highlight-font{
  color: #f21146;
  font-size: 22rpx;
  margin-right: 10rpx;
}
.plain-font{
  color:#ffffff;
  font-size: 22rpx;
  margin-left: 10rpx;
  margin-right: 20rpx;
}
.movie-img{
  height: 238rpx;
  width: 175rpx;
  position: absolute;
  top: 160rpx;
  right: 30rpx;
}
.summary{
  margin-left: 40rpx;
  margin-top: 40rpx;
  color: #888;
  font-size: 26rpx;
}
.original-title{
  color: #636363;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: row;
}
.flex-row{
  display: flex;
  margin-bottom: 10rpx;
}
.mark{
  margin-right: 30rpx;
  white-space: nowrap;
  color: #636363;
}
.hr{
  margin-top: 45rpx;
  height: 1px;
  width: 750rpx;
  background-color: #d9d9d9;
}
.synopsis{
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
}
.synopsis-text{
  font-size: 30rpx;
}
.summary-content{
  margin-top: 20rpx;
  margin-right: 40rpx;
  line-height: 40rpx;
  letter-spacing: 1px;
  font-size: 28rpx;
}
.cast{
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
}
.cast-font{
  color: #999;
  margin-bottom: 40rpx;
}
.cast-container{
  display: inline-flex;
  flex-direction: column;
  margin-bottom: 50rpx;
  margin-right: 40rpx;
  width: 170rpx;
  text-align: center;
  white-space: normal;
}
.cast-imgs{
  white-space: nowrap;
  overflow: hidden;
  width: 100%;
}
.cast-img{
  width: 170rpx;
  height: 210rpx;
}
.cast-name{
  margin: 10rpx auto 0;
  word-break: break-all;
  font-size: 28rpx;
}