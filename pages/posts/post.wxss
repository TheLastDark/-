/* pages/posts/post.wxss */
swiper{
  width: 100%;
  height: 500rpx;
}
swiper image{
  width: 100%;
  height: 500rpx;
}
.post-contain{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  padding-bottom: 5px;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
}
.post-author{
  width:60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.post-date{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rpx;
}
.post-author-date{
  margin: 10rpx 0 20rpx 10rpx;
}
.post-title{
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 10px;
  margin-top: 10px;
  display:inline-block;
}
.post-img{
  margin: auto 0;
  width: 100%;
  height: 340rpx;
  margin-bottom: 15px;
}
.post-content{
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20px;
  margin-left: 20rpx;                                                      
  letter-spacing: 2rpx;
  line-height: 40rpx;
  display: inline-block;
}
.post-like{
  font-size: 13px;
  /* flex-direction: row; */
  line-height: 16px;
  margin-left: 10px;
  /* margin-top: 20px; */
}
.post-like-img{
  width: 16px;
  height: 16px;
  margin-right: 8px;vertical-align: middle;
}
.post-like-font{
  vertical-align: middle;
  margin-right: 20px;
}